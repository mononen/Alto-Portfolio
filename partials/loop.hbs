<article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    {{> post-media ratio="horizontal"}} {{!post image}}
    <div class="container medium">
        {{> post-header big_title=true}} {{!post title, publish date, read time, tag}}
        {{content}}
        {{> post-footer}} {{!author, 'read now', 'read later'}}
    </div>
</article>